<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
	*변경사항*
	mapper 파일의 완전한 경로 . xml은 생략
	ibatis와는 다르게 id값에 '.'를 사용하지 못함
 -->
<mapper namespace="config.Member">

	<select id="MemberIsLogin" parameterType="java.util.Map" resultType="int">
		<!-- select count(*) from member where id='user1' and pwd='1234'; -->
		<!-- SELECT COUNT(*) FROM templogin WHERE id=#{id} AND pwd=#{pwd} -->
		SELECT COUNT(*) FROM member WHERE id=#{id} AND pwd=#{pwd}
	</select>
	<insert id="MemberIsJoin" parameterType="MemberDTO">
	<!-- insert into member(id, email,pwd,verified,regidate,gender,age,star) values('test','test@test.com','1234','Y',SYSDATE,'M','20',0); -->
		INSERT INTO member(id, email,pwd,verified,regidate,gender,age,star) values(#{id},#{email},#{pwd},'Y',SYSDATE,'M','20',0)
<!-- 	INSERT INTO member(id, email,pwd,verified,regidate,gender,age,star) values(#{id},#{email},#{pwd},Y,SYSDATE,M,20,0) -->
	
	
	</insert>

	
	
</mapper>